IMAGE=either:latest
VERSION=0.01
build-image:
	docker build -t $(IMAGE) .

test: build-image
	docker run --rm $(IMAGE) make -f Makefile test

shell: build-image
	docker run --rm -it $(IMAGE) bash

dist: build-image
	docker run --rm $(IMAGE) make -f Makefile dist && cat Either-$(VERSION).tar.gz > Either-$(VERSION).tar.gz

readme: build-image
	docker run --rm $(IMAGE) make -f Makefile readme > README.md

shell: build-image
  docker run --rm $(IMAGE) bash	

.PHONY: build-image test dist
